<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_enabled="true" android:state_pressed="false">
		<shape>
			<solid android:color="@color/red_normal" />
			<padding android:bottom="@dimen/button_padding" android:left="@dimen/button_padding" android:right="@dimen/button_padding" android:top="@dimen/button_padding" />
		</shape>
	</item>

	<item android:state_pressed="true">
		<shape>
			<solid android:color="@color/red_pressed" />
			<padding android:bottom="@dimen/button_padding" android:left="@dimen/button_padding" android:right="@dimen/button_padding" android:top="@dimen/button_padding" />
		</shape>
	</item>

	<item android:state_enabled="false">
		<shape>
			<solid android:color="@color/lightGray" />
			<padding android:bottom="@dimen/button_padding" android:left="@dimen/button_padding" android:right="@dimen/button_padding" android:top="@dimen/button_padding" />
		</shape>
	</item>
</selector>