<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<!--Buttons styles-->
	<style name="DefaultButton" parent="android:Widget.Button">
		<item name="android:background">@drawable/button_selector_red</item>
		<item name="android:textColor">@drawable/button_text_selector</item>
	</style>

	<style name="RedButton" parent="android:Widget.Button">
		<item name="android:background">@drawable/button_selector_red</item>
		<item name="android:textColor">@drawable/button_text_selector</item>
	</style>

	<style name="WhiteButton" parent="android:Widget.Button">
		<item name="android:background">@drawable/button_selector_white</item>
		<item name="android:textColor">@drawable/button_text_selector_red</item>
	</style>

</resources>
